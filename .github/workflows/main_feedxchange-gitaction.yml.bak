name: Deploy Node.js App to Azure Web App via Oryx

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '22.x'

      # Optional: Run build locally (optional if you want Oryx to handle it)
      # - name: Install dependencies and build
      #   run: |
      #     npm install
      #     npm run build

      - name: Deploy to Azure Web App using Oryx
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'feedXchange-gitAction'  # Replace with your actual app name
          slot-name: 'Production'
          publish-profile: ${{ secrets.AZUREAPPSERVICE_PUBLISHPROFILE_81685AD6F9A74EDA9AAB1001C785E2FA }}
          package: .
